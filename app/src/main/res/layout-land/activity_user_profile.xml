<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.on.conestogac.www.spotme.userProfile">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home" />

        <Button
            android:id="@+id/signOutBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:onClick="onClickSignOut"
            android:padding="15dp"
            android:text="Sign Out"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/userData"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:onClick="onClickUserData"
            android:padding="15dp"
            android:text="User Data"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/gymMaps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:onClick="onClickGymMaps"
            android:padding="15dp"
            android:text="Gym Maps"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/changeForRealPicture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="195dp"
            android:onClick="onClickChangeForRealImage"
            android:padding="15dp"
            android:text="Change Image"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/urlGetting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="250dp"/>
        <ImageView
            android:id="@+id/showPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="325dp"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
